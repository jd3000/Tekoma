{% block title %}Tekoma
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container accueil">
		<main>
			<div class="row">
				<div class="col text-center mt-5 title">RÃ‰INITIALISATION DU MOT DE PASSE OUBLIE</div>
