{% extends 'base.html.twig' %}

{% block title %}Tekoma
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container accueil">
		<main>
			<div class="row">
				<div class="col text-center mt-3 title d-md-none">
					<div>CREATIONS</div>
				</div>
			</div>
			<div class="row align-items-center justify-content-center mt-1">
				{% for product in products %}
					<div class="col-12 col-md-4 text-center mt-3 cardAnim">
						<a href="{{ path('creations_show' , {'slug':product.slug|e} ) }}">
							<div class="imgProduct p-4"><img class="card-img" src="/img/uploads/{{ product.img|e }}" alt="image {{ product.name|e }}"></div>
						</a>
					</div>
				{% endfor %}
			</div>
		</main>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}
