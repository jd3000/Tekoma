{% extends 'base.html.twig' %}

{% block title %}Tekoma
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}

	<div class="container accueil">
		<div class="row">
			<div class="col text-center mt-5 title">INSCRIPTION</div>
		</div>
		<div class="row justify-content-center align-items-center mt-4">
			<div class="col-8 col-md-6 text-center mt-4">

				{{ form_start(registrationForm) }}
				{{ form_errors(registrationForm) }}

				<div class="row justify-content-center mt-4">
					<div class="col-12">
						<div>{{ form_widget(registrationForm.email) }}</div>
						<div>{{ form_errors(registrationForm.email) }}</div>
					</div>
				</div>
				<div class="row justify-content-center mt-4">
					<div class="col-10">
						{{ form_widget(registrationForm.plainPassword, {label: 'Password'}) }}
						{{ form_errors(registrationForm.plainPassword, {label: 'Password'}) }}
					</div>
					<div class="col-2">
						<span toggle="#password-field" class="fas fa-eye-slash toggle-password-register icon-eye-size"></span>
					</div>
				</div>
				<div class="row d-flex justify-content-center">
					<div class="col-12 col-md-8 col-lg-4 mt-3">
						{{ form_widget(registrationForm.agreeTerms) }}
						{{ form_errors(registrationForm.agreeTerms) }}


					</div>
				</div>
				<div class="row justify-content-center mt-4">
					<div class="col-10">
						<button type="submit" class="btn btn-lg btn-custom-border">M'inscrire</button>
						{{ form_end(registrationForm) }}
					</div>
				</div>
				<div class="row justify-content-center mt-4">
					<div class="col-10">
						<a href="{{ path('loginproduct')}}">Déjà membre ? Connectez-vous !</a>
					</div>
				</div>
			</div>
		</div>

		<div class="row d-flex justify-content-center logoLogin">
			<div class="col-3 col-md-2 col-lg-2 mt-3">
				<img class="card-img" src="./img/JUL.png" alt="sign logo">
			</div>
		</div>
	</div>
{% endblock %}
