{% extends 'base.html.twig' %}

{% block title %}Tekoma
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container accueil">
		<div class="row justify-content-center p-3">
			<div class="col-md-6 text-center m-3 title bg-danger mx-3 rounded">
				<div>Confirmer l'envoi de la commande
					{{ stripeOrder.product }}</div>
			</div>
		</div>
		<div class="row align-items-center justify-content-center">

			<div class="col-12 col-md-4 text-center mt-3">
				<div class="imgProduct p-4"><img class="card-img" src="/img/uploads/{{ stripeOrder.img }}" alt="image {{ stripeOrder.product }}"></div>
			</div>

		</div>

		<div class="row">
			<div class="col text-center mt-3 title">
				<div>Envoyer un mail de confiramtion à
					<span class="text-warning">{{ stripeOrder.username }}</span>
				</div>
				<div>Modifier le statut d'envoi de la commande vers
					<i class="fas fa-check text-success"></i>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col text-center mt-3">
				<div class="text-danger">
					Action définitive
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col text-center mt-3">
				<div></div>
			</div>
		</div>

		<div class="row">
			<div class="col text-center mt-3">
				<a href="{{ path('admin_order_confirm' , {'reference':stripeOrder.reference} )}}">
					<button class="btn btn-custom-border bg-danger">Envoyer</button>
				</a>
			</div>
		</div>

		<div class="row">
			<div class="col text-center mt-5">
				<a href="{{ path('admin_order_upd' , {'reference':stripeOrder.reference} )}}">
					<button class="btn btn-custom">Revenir à la commande</button>
				</a>
			</div>
		</div>


		<div class="row d-flex justify-content-center logoSpec">
			<div class="col-3 col-md-2 col-lg-2 mt-3">
				<img class="card-img" src="/img/JUL.png" alt="sign logo">
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
