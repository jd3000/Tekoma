{% extends 'base.html.twig' %}

{% block title %}Tekoma
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container accueil">
		<div class="row justify-content-center">
			<div class="col-12 text-center mt-3 title">
				<div>{{ product.name }}</div>
			</div>
		</div>
		<div class="row align-items-center justify-content-center">

			<div class="col-12 col-md-4 text-center mt-3">
				<div class="imgProduct p-4"><img class="card-img" src="/img/uploads/{{ product.img }}" alt="image {{ product.name }}"></div>
			</div>

		</div>

		<div class="row justify-content-center">
			<div class="col-12 text-center mt-3 title">
				<div>Description
					{{ product.name }}</div>
			</div>
		</div>

		<div class="row justify-content-center">
			<div class="col-md-10 text-center mt-3">
				<div>{{ product.description }}
				</div>
			</div>
		</div>

		<div class="row justify-content-center">
			<div class="col-12 text-center mt-3">
				<div>{{ product.price }}
					€
				</div>
			</div>
		</div>

		<div class="row justify-content-center">
			<div class="col-12 text-center mt-3">
				<a href="{{ path('creations')}}">
					<button class="btn btn-custom">Revenir aux créations</button>
				</a>
			</div>
		</div>

		<div class="row justify-content-center">
			<div class="col-12 text-center mt-3">
				{% if product.quantity == 0 %}
					<a href="{{ path('contact_order' , {'slug':product.slug} )}}">
						<button class="btn btn-custom-border">Précommander</button>
					</a>
				{% else %}
					<a href="{{ path('creations_login' , {'slug':product.slug} )}}">
						<button class="btn btn-custom-border">Acheter</button>
					</a>
				{% endif %}
			</div>
		</div>

		<div class="row d-flex justify-content-center logoSpec">
			<div class="col-3 col-md-2 col-lg-2 mt-3">
				<img class="card-img" src="/img/JUL.png" alt="sign logo">
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}
